function _get_options($vocab_name) {
  $term_list = taxonomy_vocabulary_machine_name_load($vocab_name);
  $tree = taxonomy_get_tree($term_list->vid);
  $options = array();
  $options[''] = '- Select -';
  foreach ($tree as $value) {
    $options[$value->tid] = $value->name;
  }
  return $options;
}


